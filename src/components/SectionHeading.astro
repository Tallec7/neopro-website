---
interface Props {
  title: string;
  italicWord: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, italicWord, subtitle, centered = true } = Astro.props;
---

<div class:list={[centered && 'text-center']}>
  <h2 class="text-[40px] md:text-[48px] font-bold mb-4">
    {title}{' '}
    <span class="font-playfair italic text-neo-green-dark">{italicWord}</span>
  </h2>
  {subtitle && (
    <p class="text-neo-gray text-[16px] max-w-[600px] mx-auto">{subtitle}</p>
  )}
</div>
